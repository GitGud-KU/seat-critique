.container
  %h1
    = @building.name

  %h3 Address
  = @building.address

  .separator
  /%br
  /= link_to "Bathrooms", building_bathrooms_path(@building), :class => 'btn btn-default'
  /%br
  /Begin Bathroom Module
  %h3 Bathrooms

  = link_to "Add New Bathroom", new_building_bathroom_path(@building), :class => 'btn btn-primary'

  .separator

  %table{:style => "width:100%;", :class => "table table-striped"}
    - if @bathrooms.empty?
      %div{:class => "panel panel-warning"}
        .panel-heading{ :style => "text-align:center;"}
          = "There are no bathrooms for this building."
    - else
      %thead
        %tr
          %th Gender
          %th Floor
          %th Location
          %th Actions
      %tbody
        - @bathrooms.each do |bathroom|
          %tr
            %td
              = bathroom.gender
            %td
              = bathroom.floor
            %td
              = bathroom.location
            %td
              = link_to "Show", building_bathroom_path(@building,bathroom), :class => 'btn btn-default'
              = link_to "Edit", edit_building_bathroom_path(@building,bathroom), :class => 'btn btn-default'
              = link_to "Remove", building_bathroom_path(@building,bathroom), :class => 'btn btn-danger', method: :delete, :data => {confirm: 'Are you sure you want to delete this bathroom?'}
  /End Bathroom module

  = link_to "Go Back", buildings_path, :class => 'btn btn-default'
