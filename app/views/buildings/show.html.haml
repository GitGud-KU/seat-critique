.container
  %h1
    = @building.name

  %h3 Address
  = @building.address

  .separator
  /%br
  /= link_to "Bathrooms", building_bathrooms_path(@building), :class => 'btn btn-default'
  /%br
  /Begin Bathroom Module
  %h3 Bathrooms

  .separator

    - if @bathrooms.empty?
      %div{:class => "panel panel-warning"}
        .panel-heading{ :style => "text-align:center;"}
          = "There are no bathrooms for this building."
    - else
      .container
        .row
          - @bathrooms.each do |bathroom|
            .col-sm-4
              .card
                .card-block
                  = render partial: 'gender_picture', locals: { bathroom: bathroom }
                  %h3.card-title
                    = bathroom.floor
                    = bathroom.location
                  %p.card-text
                    = bathroom.gender
                  %br
                    - if bathroom.average_overall_rating.nan?
                      Hello
                    -else
                      - bathroom.average_overall_rating.to_i.times do
